<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="release" name="Create Runnable Jar for Project ACCUWeatherSnarl">

	<target name="init">
		<mkdir dir="./dist" />
		<mkdir dir="./comp" />
	</target>
	
	<target name="cleanup">
		<delete dir="./comp" />	
	</target>

	<target name="compile" depends="init">
		<javac srcdir="./src" destdir="./comp" >
		</javac>
	</target>



	

	<target name="release" depends="compile">
		
		<jar destfile="./dist/Installer.jar" basedir="./comp/" >
			<manifest>
				<attribute name="version" value="1.0" />
			</manifest>
		</jar>
		<antcall target="cleanup"></antcall>
	</target>
</project>
